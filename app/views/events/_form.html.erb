<%= simple_form_for @event do |f| %>
  <%= f.input :name %>
  <%= f.association :participants,
                    collection: User.all.reject { |user| user == current_user },
                    label_method: :username,
                    value_method: :id,
                    include_blank: false,
                    as: :check_boxes
  %>
  <%= f.button :submit %>
<% end %>

<%= link_to 'Cancel', user_home_path(current_user) %>